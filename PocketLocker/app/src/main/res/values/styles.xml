<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="TinyLockerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TinyLockerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/background</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/full_trans</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="editTextStyle">@android:style/Widget.Holo.Light.EditText</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/full_trans</item>
        <item name="android:bottomDark">@color/full_trans</item>
        <item name="android:bottomMedium">@color/full_trans</item>
        <item name="android:centerBright">@color/full_trans</item>
        <item name="android:centerDark">@color/full_trans</item>
        <item name="android:centerMedium">@color/full_trans</item>
        <item name="android:fullBright">@color/full_trans</item>
        <item name="android:fullDark">@color/full_trans</item>
        <item name="android:topBright">@color/full_trans</item>
        <item name="android:topDark">@color/full_trans</item>
    </style>

</resources>